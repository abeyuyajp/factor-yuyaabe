<%= render "shared/header" %>

<%# cssはログインのものを使用
 app/assets/stylesheets/user/login.css %>
<div class="registration">
  <div class="user-new-contents">
    <%= form_with model: @user, url: user_registration_path, class:"registration-main", local: true do |f| %>

    <div class="form-wrap">
      <div class="form-header">
        <h1 class="form-title">
          新規登録
        </h1>
      </div>

      <%= render "devise/shared/error_messages", model: f.object %>

      <div class="form-area">
        <%= f.text_field :nickname, class: "input-area", id:"nickname", placeholder:"ユーザーネーム", autofocus: true%>
      </div>
      <div class="form-area">
        <%= f.email_field :email, class: "input-area", id:"email", placeholder:"メールアドレス" %>
      </div>
      <div class="form-area">
        <%= f.password_field :password, class: "input-area", id:"password", placeholder:"パスワード" %>
      </div>
      <div class="form-area">
        <%= f.password_field :password_confirmation, class: "input-area", id:"password-confirmation", placeholder:"パスワード(確認)" %>
      </div>
      <div class="form-area">
        <%= f.text_field :team, class: "input-area", id:"team", placeholder:"現所属チーム" %>
      </div>
      <div class="button-area">
        <label class="form-text">
          <%= f.radio_button :position, :player ,id:"position"%>
          選手
        </label>
        <label class="form-text">
          <%= f.radio_button :position, :scouter, id:"position"%>
          チーム関係者
        </label>
      </div>

      <div class="action">
        <%= f.submit "登録する", class:"user-new-btn" %>
      </div>
    </div>

    <% end %>
  </div>
</div>

<%= render "shared/footer" %>


