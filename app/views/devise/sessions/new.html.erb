<%= render "shared/header" %>

<div class="login">
  <div class="user-new-contents">
    <%= form_with model:@user, url: user_session_path, class:"session-main", local: true do |f| %>
      <div class="form-wrap">
        <div class="form-header">
          <h1 class="form-title">
            ログイン
          </h1>
        </div>
        <div class="login-message">
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class="form-area">
          <%= f.email_field :email, class:"input-area", id:"email", placeholder:"メールアドレス", autofocus: true %>
        </div>
        <div class="form-area">
          <%= f.password_field :password, class:"input-area", id:"password", placeholder:"パスワード" %>
        </div>
        <div class="action">
          <%= f.submit "ログイン", class: "user-new-btn" %>
          <%= link_to "登録する", new_user_registration_path, class: "sign-up-btn"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>









