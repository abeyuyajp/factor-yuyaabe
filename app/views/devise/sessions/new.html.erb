<%= render "shared/header" %>

<div class="login">
  <div class="login-contents">
<%= form_with model:@user, url: user_session_path, class:"session-main", local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h1 class="form-title">
      ログイン
    </h1>
  </div>
  <div class="login-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-area">
    <%= f.email_field :email, class:"input-area", id:"email", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-area">
    <%= f.password_field :password, class:"input-area", id:"password", placeholder:"パスワード" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン", class: "login-btn" %>
  </div>
</div>
<% end %>
</div>
</div>

<%= render "shared/footer" %>









