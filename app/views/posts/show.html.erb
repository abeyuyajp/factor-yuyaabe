<%= render "shared/header" %>

<div class="show-post">

  <%# 投稿の詳細 %>
  <div class="show-area">
    <h2 class="show-post-title">
      <%= @post.title %>
    </h2>
    <div class="show-video-content">
      <iframe class="show-video" src="https://www.youtube.com/embed/<%= @post.youtube_url.last(11)%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="show-post-text">
      <%= @post.text %>
    </div>
    <%# //投稿の詳細 %>

    <%# ユーザー情報の詳細 %>
    <div class="user-data">
      <h2 class="user-title">選手情報</h2>
      <table class="user-table">
        <tbody>
          <tr>
            <th class="user-header">名前</th>
            <td class="user-content"><%= @post.user.nickname %></td>
          </tr>
          <tr>
            <th class="user-header">所属チーム</th>
            <td class="user-content"><%= @post.user.team %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <%# //ユーザー情報の詳細 %>
    <div class="action-btn">
    <% if user_signed_in? %>
      <% if current_user.id == @post.user_id %>
        <%= link_to "編集する", edit_post_path(@post.id), class: "edit-btn" %>
        <%= link_to "削除する", post_path(@post.id), method: :delete, class: "delete-btn" %>
      <% end %>
    <% end %>
    </div>
  </div>

</div>

<%= render "shared/footer" %>