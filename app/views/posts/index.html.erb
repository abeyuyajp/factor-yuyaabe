<%= render "shared/header" %>

<div class="main">
  
  <div class="post-contents">
    <h2 class="title">投稿一覧</h2>
    <ul class="post-lists">

      <% @posts.each do |post| %>
      <li class="list">
        <%#= link_to post_path(post.id) do %>
        <%# youtubeの動画を表示 %>
        <div class="youtube_url">
        <iframe class="video" src="https://www.youtube.com/embed/<%= post.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <%# //youtubeの動画を表示%>
        <div class="post-title">
          <%= post.title %>
        </div>
        <div class="post-date">
          <%= post.created_at %>
        </div>
        <div class="post-user">
          <%= post.user.nickname %>
        </div>
      </li>
      <% end %>

    </ul>
  </div>
</div>

<%= render "shared/footer" %>

