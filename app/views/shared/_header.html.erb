<header class='header'>
  <div class='header-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワード検索'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <%= link_to image_tag("header-logo.png", class:"factor-icon"), "/" %>
    <div class='nav'>
      <ul class="lists">
        <%# if user_signed_in? %>
        <li><%#= link_to "ユーザーネーム", "#", class: "user-nickname" %></li>
        <li><%#= link_to "ログアウト", "#", class:"logout" %></li>
        <%# else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <span>/</span>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up"  %></li>
        <%# end %>
      </ul>
    </div>
  </div>
</header>